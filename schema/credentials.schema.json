{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/casoon/typst-business-templates/schema/credentials.schema.json",
  "title": "Credentials Document",
  "description": "Schema for credentials/access data documents",
  "type": "object",
  "required": ["metadata", "services"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["document_number", "title", "client_name", "project_name", "created_at"],
      "properties": {
        "document_number": { "type": "string" },
        "title": { "type": "string" },
        "client_name": { "type": "string" },
        "project_name": { "type": "string" },
        "created_at": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "provider": { "type": ["string", "null"] },
          "description": { "type": ["string", "null"] },
          "technical": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": { "type": "string" },
                "value": { "type": ["string", "number"] }
              }
            }
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "protocol": { "type": "string" },
                "port": { "type": ["string", "number"] },
                "ssl_port": { "type": ["string", "number", "null"] }
              }
            }
          },
          "credentials": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["username", "password"],
              "properties": {
                "name": { "type": ["string", "null"] },
                "username": { "type": "string" },
                "password": { "type": "string" },
                "email": { "type": ["string", "null"] },
                "role": { "type": ["string", "null"] },
                "two_factor": {
                  "type": ["object", "null"],
                  "properties": {
                    "method": { "type": "string" },
                    "secret": { "type": ["string", "null"] }
                  }
                },
                "notes": { "type": ["string", "null"] }
              }
            }
          },
          "notes": { "type": ["string", "null"] }
        }
      }
    }
  }
}
